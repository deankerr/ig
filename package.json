{
  "name": "ig",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "dotenv": "^17.2.3",
      "zod": "^4.3.6",
      "typescript": "^5.9.3",
      "@types/node": "^25.0.10",
      "@cloudflare/workers-types": "^4.20260124.0",
      "@orpc/server": "^1.12.2",
      "@orpc/openapi": "^1.12.2",
      "@orpc/zod": "^1.12.2",
      "alchemy": "^0.83.1",
      "hono": "^4.8.2",
      "drizzle-orm": "^0.45.1",
      "@fal-ai/client": "^1.8.4",
      "@libsql/client": "0.17.0",
      "libsql": "0.5.22",
      "@orpc/client": "^1.12.2",
      "remeda": "^2.33.4",
      "up-fetch": "^2.5.1",
      "uuid": "^13.0.0",
      "@types/uuid": "^11.0.0"
    }
  },
  "type": "module",
  "scripts": {
    "dev": "turbo -F @ig/infra dev",
    "check-types": "turbo check-types",
    "dev:web": "turbo -F web dev",
    "dev:server": "turbo -F server dev",
    "db:generate": "turbo -F @ig/db db:generate",
    "clean": "rm -rf node_modules .turbo apps/*/node_modules packages/*/node_modules packages/*/dist apps/*/dist && find . -name '*.tsbuildinfo' -not -path '*/node_modules/*' -delete",
    "check": "bun run check-types && oxlint --fix && oxfmt --write",
    "deploy": "turbo deploy",
    "destroy": "turbo -F @ig/infra destroy"
  },
  "dependencies": {
    "@ig/env": "workspace:*",
    "dotenv": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "catalog:",
    "@ig/config": "workspace:*",
    "@types/node": "catalog:",
    "lefthook": "^2.0.15",
    "oxfmt": "^0.19.0",
    "oxlint": "^1.41.0",
    "turbo": "^2.7.6",
    "typescript": "catalog:"
  },
  "packageManager": "bun@1.3.6"
}
